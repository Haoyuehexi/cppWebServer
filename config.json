{
    "server": {
        "port": 1234,
        "host": "0.0.0.0",
        "thread_pool_size": 8,
        "max_connections": 1000,
        "timeout_ms": 30000,
        "keep_alive": true
    },
    "logging": {
        "level": "DEBUG",
        "file": "logs/server.log",
        "max_file_size_mb": 100,
        "enable_console": true
    },
    "http": {
        "document_root": "./resources",
        "default_page": "index.html",
        "max_request_size_kb": 1024,
        "enable_directory_listing": false
    },
    "database": {
        "enable": true,
        "host": "localhost",
        "port": 3306,
        "username": "webserver",
        "password": "password",
        "database": "webserver_db",
        "connection_pool_size": 10
    }
}